<div class="row">
  <div class="col-md-6  col-md-offset-3">
      <div class="well well-md">

    <%= simple_form_for(@recipe) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :image_file_size, class: "alert alert-error" %>
      <%= f.full_error :image_content_type, class: "alert alert-error" %>

<div>
        <%= f.input :image, label: "Upload and image", class: "form-control" %><br>
          <%= f.text_field :description, as: :text, class: "form-control", placeholder: "Description..."%>

        <br>
        <%= f.text_field :title, as: :string, class: "form-control", placeholder: "Title..."%>
        <br>
        <%= f.text_field :serving_size, as: :integer, class: "form-control", placeholder: "Serving Size..."%>
        <br>
        <%= f.text_field :time, as: :integer, class: "form-control", placeholder: "Time..."%>
        <br>
       
         <%= f.text_area :ingredients, as: :text, class: "form-control", placeholder: "Ingredients..." , :cols => "40", :rows => "9" %>
         <br>
          <%= f.text_area :steps, as: :text, class: "form-control", placeholder: "Steps..." , :cols => "40", :rows => "9" %>
         <br>

        
       
        <%= f.text_field :allergies, as: :string, class: "form-control", placeholder: "Allergies..."%>
        <br>
</div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-default" %>
      </div>
    <% end %>
</div>
</div>
</div>

